import tkinter as tk

def add(x, y):
    """Add two numbers"""
    return x + y

def subtract(x, y):
    """Subtract two numbers"""
    return x - y

def multiply(x, y):
    """Multiply two numbers"""
    return x * y

def divide(x, y):
    """Divide two numbers"""
    if y == 0:
        raise ValueError("Cannot divide by zero!")
    return x / y

def calculate():
    """Perform calculation and display result"""
    try:
        num1 = float(entry_num1.get())
        num2 = float(entry_num2.get())
        operation = operation_var.get()

        if operation == "+":
            result = add(num1, num2)
        elif operation == "-":
            result = subtract(num1, num2)
        elif operation == "*":
            result = multiply(num1, num2)
        elif operation == "/":
            result = divide(num1, num2)
        else:
            result_label.config(text="Invalid operation!")
            return

        result_label.config(text=f"{num1} {operation} {num2} = {result:.2f}")
    except ValueError as e:
        result_label.config(text=str(e))

root = tk.Tk()
root.title("Simple Calculator")

# Create input fields
tk.Label(root, text="Number 1:").grid(row=0, column=0)
entry_num1 = tk.Entry(root, width=20)
entry_num1.grid(row=0, column=1)

tk.Label(root, text="Number 2:").grid(row=1, column=0)
entry_num2 = tk.Entry(root, width=20)
entry_num2.grid(row=1, column=1)

# Create operation selection
operation_var = tk.StringVar()
operation_var.set("+")
tk.Label(root, text="Operation:").grid(row=2, column=0)
tk.OptionMenu(root, operation_var, "+", "-", "*", "/").grid(row=2, column=1)

# Create calculate button
tk.Button(root, text="Calculate", command=calculate).grid(row=3, column=0, columnspan=2)

# Create result label
result_label = tk.Label(root, text="")
result_label.grid(row=4, column=0, columnspan=2)

root.mainloop()
